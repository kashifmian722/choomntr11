{% block block_image_simple_grid_reversed %}
    <style>
        .cms-block-image-simple-grid-reversed .right-top{
            margin-bottom: 40px;
        }
        .cms-block-image-simple-grid-reversed .left {
            height: 100%;
        }
    </style>
    {% set columns = 2 %}
    {# @deprecated tag:v6.5.0 - Use "element.id" directly instead. #}
    {% set id = element.id %}


    {% block block_image_simple_grid_reversed_left %}
        <div class="col-md-6">
            {% block block_image_simple_grid_reversed_left_inner %}
                {% set element = block.slots.getSlot('left') %}

                <div class="left" data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}

    {% block block_image_simple_grid_reversed_right %}
        <div class="col-md-6">
            {% block block_image_simple_grid_reversed_right_top %}
                {% set element = block.slots.getSlot('right-top') %}

                <div class="right-top" data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}

            {% block block_image_simple_grid_reversed_right_bottom %}
                {% set element = block.slots.getSlot('right-bottom') %}

                <div class="right-bottom" data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
