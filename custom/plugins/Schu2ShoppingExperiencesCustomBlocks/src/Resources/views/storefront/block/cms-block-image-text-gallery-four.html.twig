    {% set columns = 4 %}
    {# @deprecated tag:v6.5.0 - Use "element.id" directly instead. #}
    {% set id = element.id %}

    {% block block_image_text_gallery_four_left %}
        <style>
            .cms-block-image-text-gallery-four .image-text-gallery-card {
                box-shadow: 0 0 4px 0 rgb(0 0 0 / 20%);
            }
            .cms-block-image-text-gallery-four .cms-element-text {
                padding: 20px;
            }
            @media (max-width: 767.98px){
                .cms-block-image-text-gallery-four .cms-row > :not(:last-child){
                    margin-bottom: 40px;
                }
            }
        </style>
        <div class="col-sm-6 col-lg-3">
            <div class="image-text-gallery-card">
                {% block block_image_text_gallery_four_left_image %}
                    {% set element = block.slots.getSlot('left-image') %}

                    <div data-cms-element-id="{{ element.id }}">
                        {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                    </div>
