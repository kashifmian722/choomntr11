{% block block_image_text_bubble_four %}
    <style>
        .cms-block-image-text-bubble-four .cms-element-image .cms-image-container, .cms-block-image-bubble-row-four .cms-element-image .cms-image-container {
            height: 300px;
            width: 300px;
            margin: auto;
            border-radius: 50%;
            -webkit-background-clip: padding-box;
            background-clip: padding-box;
            overflow: hidden;
        }
        .cms-block-image-text-bubble-four .cms-element-text, .cms-block-image-text-row-four .cms-element-text {
            padding-top: 20px;
        }
    </style>
    {% set columns = 4 %}
    {# @deprecated tag:v6.5.0 - Use "element.id" directly instead. #}
    {% set id = element.id %}

    {% block block_image_text_bubble_four_left %}
        <div class="col-sm-6 col-lg-3">
            {% block block_image_text_bubble_four_left_image %}
                {% set element = block.slots.getSlot('left-image') %}

                <div data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
                </div>
            {% endblock %}

            {% block block_image_text_bubble_four_left_text %}
                {% set element = block.slots.getSlot('left-text') %}

                <div data-cms-element-id="{{ element.id }}">
                    {% sw_include "@Storefront/storefront/element/cms-element-" ~ element.type ~ ".html.twig" ignore missing %}
